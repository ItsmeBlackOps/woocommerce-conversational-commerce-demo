{
  "name": "woocommerce-chatbot-demo",
  "private": true,
  "version": "1.0.0",
  "description": "WooCommerce AI support agent demo",
  "scripts": {
    "dev": "concurrently -k \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "build": "npm run build --prefix frontend",
    "start": "npm run start --prefix backend",
    "test": "node --test backend/tests/*.test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@playwright/test": "^1.49.1"
  }
}
